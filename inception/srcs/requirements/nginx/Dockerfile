# ğŸ—ï¸ Base image Debian solide
FROM debian:bullseye

# âš™ï¸ Met Ã  jour la distro et installe NGINX + OpenSSL + outils utiles
RUN apt update && apt upgrade -y && \
    apt install -y nginx openssl vim curl && \
    mkdir -p /etc/nginx/ssl && \
    mkdir -p /var/run/nginx && \
    mkdir -p /var/www/html && \
    rm -rf /var/lib/apt/lists/*

# ğŸ” GÃ©nÃ©ration du certificat SSL auto-signÃ© direct pendant le build
RUN openssl req -x509 -nodes -days 365 \
    -newkey rsa:2048 \
    -keyout /etc/nginx/ssl/nginx.key \
    -out /etc/nginx/ssl/nginx.crt \
    -subj "/C=FR/ST=IDF/L=Paris/O=42/OU=Inception/CN=localhost"

# ğŸ§¹ Droits bÃ©ton sur le dossier web
RUN chmod 755 /var/www/html && \
    chown -R www-data:www-data /var/www/html

# ğŸš€ On balance notre fichier de config nginx modifiÃ©
COPY conf/nginx.conf /etc/nginx/nginx.conf

# ğŸ”¥ On balance aussi nos fichiers web (page HTML de test ou Wordpress plus tard)
COPY tools/html /var/www/html

# ğŸšª On ouvre le port HTTPS
EXPOSE 443

# ğŸ Et bim, on dÃ©marre NGINX en mode foreground comme des bonhommes
CMD ["nginx", "-g", "daemon off;"]

